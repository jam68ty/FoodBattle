<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:layout_marginEnd="15dp"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mMenuName"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/mMenuCate"
            android:layout_marginTop="13dp"
            android:text="菜單名稱"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/mMenuCate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:text="菜單分類"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/mMenuDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/mMenuName"
            android:layout_marginTop="85dp"
            android:text="難易度"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_editor_absoluteY="112dp" />

        <TextView
            android:id="@+id/mMenuAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/mMenuName"
            android:layout_alignTop="@+id/mMenuDegree"
            android:text="份量"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="82dp" />

        <ImageView
            android:id="@+id/mMenuImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/mMenuName"
            android:layout_marginStart="21dp" />

    </RelativeLayout>
</LinearLayout>